{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .card h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .card p {
            font-size: 16px;
            margin-bottom: 10px;
        }

        .footer {
            background-color: #f8f9fa;
            padding: 20px;
            margin-top: 50px;
            text-align: center;
        }

        .cart {
            width: 100%;
            background-color: #f5f5f5;
            padding: 20px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .cart h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .cart p {
            font-size: 16px;
            margin-bottom: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="cart">
        <h2>Workers</h2>
        <p>
        <img src="https://www.pngall.com/wp-content/uploads/12/Avatar-Profile-Vector.png" alt="Worker 1 Avatar" width="50px"> 
        Adam Jalssi
        <h4>Delivery Man</h4>
        </p>
        <p><img src="https://www.pngall.com/wp-content/uploads/12/Avatar-Profile-Vector.png" alt="Worker 1 Avatar" width="50px"> Walid Ben Lahmar</p>
        <p><img src="https://www.pngall.com/wp-content/uploads/12/Avatar-Profile-Vector.png" alt="Worker 1 Avatar" width="50px"> Ghabi Anis</p>
        <h4>Public Relation</h4>
        <p><img src="https://www.pngall.com/wp-content/uploads/12/Avatar-Profile-Vector-PNG-Photo.png" alt="Worker 4 Avatar" width="50px"> Nour Challouf</p>
        <p><img src="https://www.pngall.com/wp-content/uploads/12/Avatar-Profile-Vector-PNG-Photo.png" alt="Worker 5 Avatar" width="50px"> Wafa Barkallah</p>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <h2>Products Count</h2>
                <p>Total: 500</p>
                <p>Active: 400</p>
                <p>Inactive: 100</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <h2>Sales Count</h2>
                <p>Total: 1000</p>
                <p>Successful: 800</p>
                <p>Failed: 200</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <h2>Losses</h2>
                <p>Total: $5000</p>
                <p>Last Month: $1000</p>
                <p>Current Month: $500</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <h2>Existing Products</h2>
                <ul>
                    <li>Product 1</li>
                    <li>Product 2</li>
                    <li>Product 3</li>
                    <li>Product 4</li>
                    <li>Product 5</li>
                </ul>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <h2>Coming Soon Products</h2>
                <ul>
                    <li>Product 6</li>
                    <li>Product 7</li>
                    <li>Product 8</li>
                    <li>Product 9</li>
                    <li>Product 10</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="footer">
        <h2>Charts</h2>
        <!-- Include your charts here -->
        <p>Chart 1: Sales by Month</p>
        <p>Chart 2: Product Categories</p>
        <p>Chart 3: Revenue Growth</p>
    </div>

    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
