{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center">Inscription</h1>

                {{ form_start(registrationForm) }}
                    <fieldset class="mb-3">
                        <legend class="text-center">Mon identité</legend>
                        {{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control', 'style': 'width: 100%'}}) }}
                        {{ form_row(registrationForm.firstname, {'attr': {'class': 'form-control', 'style': 'width: 100%'}}) }}
                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'style': 'width: 100%'}}) }}
                    </fieldset>

                    <fieldset class="mb-3">
                        <legend class="text-center">Mes coordonnées</legend>
                        {{ form_row(registrationForm.address, {'attr': {'class': 'form-control', 'style': 'width: 100%'}}) }}
                        {{ form_row(registrationForm.zipcode, {'attr': {'class': 'form-control', 'style': 'width: 100%'}}) }}
                        {{ form_row(registrationForm.city, {'attr': {'class': 'form-control', 'style': 'width: 100%'}}) }}
                    </fieldset>
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password',
                        'attr': {'class': 'form-control', 'style': 'width: 100%'}
                    }) }}
                    {{ form_row(registrationForm.RGPDConsent) }}

                    <div class="d-grid gap-2 mt-3">
                        <button type="submit" class="btn btn-primary btn-lg">M'inscrire</button>
                        <a href="{{ path('app_login') }}" class="btn btn-secondary">Me connecter</a>
                    </div>
                {{ form_end(registrationForm) }}            
            </div>
        </div>
    </section>

{% endblock %}
